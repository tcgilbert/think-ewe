<%- include ('partials/messages.ejs') %>

<!-- Modal -->
<div
  class="modal fade"
  id="staticBackdrop"
  data-backdrop="static"
  data-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Create Book Entry</h5>

        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Entry input form -->
        <form action="">
          <div class="form-group">
            <input type="text" name="" id="">
          </div>
          <div class="form-group">
            <input type="text" name="" id="">
          </div>
          <div class="form-group">
            <input type="text" name="" id="">
          </div>
          <div class="form-group">
            <input type="text" name="" id="">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div>
    </div>
  </div>
</div>

<!-- Search form -->
<form
  action="/profile/find-books"
  class="form-inline d-flex justify-content-center md-form form-sm mt-4"
>
  <i class="fas fa-search" aria-hidden="true"></i>
  <input
    class="form-control form-control-sm ml-3 w-75"
    type="text"
    name="search"
    placeholder="Search Books"
    aria-label="Search"
  />
</form>

<div class="container-fluid mt-4">
  <div class="row">
    <% books.forEach((book) => { %>
    <div class="col">
      <div class="card mt-3" style="width: 15rem; height: 25rem">
        <div class="img-frame">
          <div class="img-container">
            <img
              id="book-img"
              src="<%= book.imgUrl %> "
              class="img-thumbnail card-img-top"
              alt="Book Cover"
            />
          </div>
        </div>
        <div class="card-body card-info">
          <% if (book.title) { %>
          <h5 class="card-title"><%= book.title %></h5>
          <% } %> <% if (book.authors != null) { %>
          <p class="card-text"><%= book.authors[0] %></p>
          <% } %>
          <!-- Button trigger modal -->
          <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#staticBackdrop"
          >
            Select
          </button>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
