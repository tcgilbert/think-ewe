<%- include ('partials/messages.ejs') %>

<!-- Search form -->
<form
  action="/profile/find-books"
  class="form-inline d-flex justify-content-center md-form form-sm mt-4"
>
  <i class="fas fa-search" aria-hidden="true"></i>
  <input
    class="form-control form-control-sm ml-3 w-75"
    type="text"
    name="search"
    placeholder="Search Books"
    aria-label="Search"
  />
</form>


<div class="container-fluid mt-4">
  <div class="row">
    <% books.forEach((book) => { %>
    <div class="col">
      <div class="card mt-3" style="width: 15rem; height: 25rem">
        <div class="img-frame">
          <div class="img-container">
            <img
              id="book-img"
              src="<%= book.imgUrl %> "
              class="img-thumbnail card-img-top"
              alt="Book Cover"
            />
          </div>
        </div>
        <div class="card-body card-info">
          <% if (book.title) { %>
          <h5 class="card-title"><%= book.title %></h5>
          <% } %> <% if (book.authors != null) { %>
          <p class="card-text"><%= book.authors[0] %></p>
          <% } %>

          <form action="/profile/create-post" method="POST">
            <input type="hidden" name="title" value="<%= book.title %> ">
            <input type="hidden" name="authors" value="<%= book.authors %> ">
            <input type="hidden" name="imageUrl" value="<%= book.imgUrl %> ">
            <button type="submit" class="btn btn-primary">Select</button>
          </form>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

