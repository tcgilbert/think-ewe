    <nav class="navbar fixed-top navbar-dark bg-dark">
      <div>
        <img class="logo-nav" src="/static/img/logo-white.png" alt="" />
        <a class="navbar-brand" href="/">Think Ewe</a>
      </div>
      <div class="d-flex">
        <% if (isLoggedIn) { %>
        <a
          class="btn btn-outline-danger my-2 my-sm-0 mr-3"
          href="/profile"
          class="btn btn-secondary"
          >Profile</a
        >
        <a
          class="btn btn-outline-danger my-2 my-sm-0"
          href="/users/logout"
          class="btn btn-secondary"
          >LogOut</a
        >
        <% } else { %>
        <a
          class="btn btn-outline-danger my-2 my-sm-0 mr-3"
          href="/users/login"
          class="btn btn-secondary"
          >LogIn</a
        >
        <a
          class="btn btn-outline-danger my-2 my-sm-0"
          href="/users/register"
          class="btn btn-secondary"
          >Register</a
        >
        <% } %>
      </div>
