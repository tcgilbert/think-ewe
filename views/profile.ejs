<% if (book.create && !edit) { %>
<!-- Create Entry Modal -->
<div
  class="modal"
  id="staticBackdrop"
  data-show="true"
  data-backdrop="static"
  data-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Create New Entry</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-auto">
              <img src="<%= book.imgUrl %>" alt="Book Cover" />
            </div>
            <div class="col rating">
              <div>
                <h3><%= book.title %></h3>
                <p>By: <%= book.authors %></p>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col mt-3">
              <h5 style="display: inline" class="mt-2">Your Rating:</h5>
              <span class="rating-displayed" id="rating-displayed"></span>
              <div class="stars">
                <img
                  id="star-one"
                  class="star"
                  src="/static/img/star-empty.svg"
                  alt="star outline"
                />
                <img
                  id="star-two"
                  class="star"
                  src="/static/img/star-empty.svg"
                  alt="star outline"
                />
                <img
                  id="star-three"
                  class="star"
                  src="/static/img/star-empty.svg"
                  alt="star outline"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col mt-3">
              <h5 style="display: inline">Your Thoughts:</h5>
              <span class="rating-displayed"> (optional)</span>
              <textarea
                id="blurb"
                name="blurb"
                form="book-post-form"
              ></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <form id="book-post-form" action="/profile" method="POST">
          <input type="hidden" name="title" value="<%= book.title  %>" />
          <input type="hidden" name="author" value="<%= book.authors  %>" />
          <input type="hidden" name="cover" value="<%= book.imgUrl %>" />
          <input id="rating" type="hidden" name="rating" value="" />
          <input type="hidden" name="userId" value="<%= user.id %>" />
          <button type="submit" class="btn btn-primary">Create</button>
        </form>
        <a href="/profile">Cancel</a>
      </div>
    </div>
  </div>
</div>
<% } %> <% if (edit && !book.create) { %>
<!-- Edit Profile Modal -->
<div
  class="modal"
  id="staticBackdrop"
  data-show="true"
  data-backdrop="static"
  data-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Edit Profile</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="edit-profile" action="/profile/edit" method="POST">
          <div class="form-group">
            <label for="name-edit">Name</label> <br />
            <input
              id="name-edit"
              type="text"
              name="fullname"
              value="<%= user.fullname %>"
            />
          </div>

          <label for="bio-edit">Bio</label>
          <textarea id="bio-edit" name="bio" form="edit-profile">
<%= user.bio %></textarea
          >
          <button type="submit" class="btn btn-primary">Edit</button>
        </form>
      </div>
      <div class="modal-footer">
        <form id="book-post-form" action="/profile" method="POST">
          <input type="hidden" name="title" value="<%= book.title  %>" />
          <input type="hidden" name="author" value="<%= book.authors  %>" />
          <input type="hidden" name="cover" value="<%= book.imgUrl %>" />
          <input id="rating" type="hidden" name="rating" value="" />
          <input type="hidden" name="userId" value="<%= user.id %>" />
        </form>
        <a href="/profile">Cancel</a>
      </div>
    </div>
  </div>
</div>
<% } %>

<!-- Bio -->
<div class="container-fluid">
  <div class="row">
    <div class="col-md-auto">
      <div class="profile-pic mt-5">
        <img
          id="profile-pic"
          src="/static/img/male1.png"
          alt="profile picture"
          width="300"
          height="300"
        />
        <h2><%= user.fullname %></h2>
        <h4><%= user.username %></h4>
        <br />
        <h6 style="display: inline">Bio</h6>
        <p id="bio"><%= user.bio %></p>
        <a class="btn btn-info btn-block" href="/profile/edit"
          >Edit Profile</a
        >
      </div>
    </div>

    <!-- feed -->
    <div class="col">
      <div class="mt-5">
        <a class="btn btn-block btn-dark" href="/profile/find-books"
          >Create new post</a
        >
      </div>
      <div class="mt-3">
        <% posts.forEach((post) =>{ %>
        <div class="book-post">
          <div class="container">
            <div class="row">
              <div class="col-auto">
                <img
                  class="post-img"
                  src="<%= post.dataValues.cover %>"
                  alt="book Cover"
                />
              </div>
              <div class="col d-flex flex-column justify-content-between">
                <div>
                  <div>
                    <h2><%= post.dataValues.title %></h2>
                    <p class="post-author">By: <%= post.dataValues.author %></p>
                  </div>
                </div>

                <div>
                  <div>
                    <div>
                      <% if (post.dataValues.rating === 1) { %>
                      <img
                        id="star-one"
                        class="star"
                        src="/static/img/star.svg"
                        alt="star outline"
                      />
                      <% } %> <% if (post.dataValues.rating === 2) { %>
                      <img
                        id="star-one"
                        class="star"
                        src="/static/img/star.svg"
                        alt="star outline"
                      />
                      <img
                        id="star-one"
                        class="star"
                        src="/static/img/star.svg"
                        alt="star outline"
                      />
                      <% } %> <% if (post.dataValues.rating === 3) { %>
                      <img
                        id="star-one"
                        class="star"
                        src="/static/img/star.svg"
                        alt="star outline"
                      />
                      <img
                        id="star-one"
                        class="star"
                        src="/static/img/star.svg"
                        alt="star outline"
                      />
                      <img
                        id="star-one"
                        class="star"
                        src="/static/img/star.svg"
                        alt="star outline"
                      />
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col blurb d-flex flex-column justify-content-between">
                <p class="p-1">
                  <strong><%= user.username %></strong> - <%=
                  post.dataValues.blurb %>
                </p>
                <div class="p-2 ml-auto">
                  <form action="/profile/book-post" method="POST">
                    <input
                      type="hidden"
                      name="id"
                      value="<%= post.dataValues.id%>"
                    />
                    <input
                      type="hidden"
                      name="userId"
                      value="<%= post.dataValues.userId%>"
                    />
                    <button class="btn btn-small btn-danger" type="submit">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>

<% if (book.create) { %>
<script src="/static/js/rating.js"></script>
<% } %>
