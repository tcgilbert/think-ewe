<% if (book.create) { %>
<!-- Modal -->
<div
  class="modal"
  id="staticBackdrop"
  data-show="true"
  data-backdrop="static"
  data-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Create New Entry</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-auto">
              <img src="<%= book.imgUrl %>" alt="Book Cover" />
            </div>
            <div class="col rating">
              <div>
                <h3><%= book.title %></h3>
                <p>By: <%= book.authors %></p>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col mt-3">
              <h5 style="display: inline;" class="mt-2">Your Rating: </h5>
              <span class="rating-displayed" id="rating-displayed"></span>
              <div class="stars">
                <img
                  id="star-one"
                  class="star"
                  src="/static/img/star-empty.svg"
                  alt="star outline"
                />
                <img
                  id="star-two"
                  class="star"
                  src="/static/img/star-empty.svg"
                  alt="star outline"
                />
                <img
                  id="star-three"
                  class="star"
                  src="/static/img/star-empty.svg"
                  alt="star outline"
                />

              </div>
            </div>
          </div>
          <div class="row">
            <div class="col mt-3">
              <h5 style="display: inline;">Your Thoughts:</h5>
              <span class="rating-displayed"> (optional)</span>
              <textarea
                id="blurb"
                name="blurb"
                form="book-post-form"
              ></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <form id="book-post-form" action="/profile" method="POST">
          <input type="hidden" name="title" value="<%= book.title  %>" />
          <input type="hidden" name="author" value="<%= book.authors  %>" />
          <input type="hidden" name="cover" value="<%= book.imgUrl %>" />
          <input id="rating" type="hidden" name="rating" value="" />
          <input type="hidden" name="userId" value="<%= book.imgUrl %>" />
          <button type="submit" class="btn btn-primary">Create</button>
        </form>
        <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button> -->
        <a href="/profile">Cancel</a>
      </div>
    </div>
  </div>
</div>
<% } %>

<!-- Bio -->
<div class="container-fluid">
  <div class="row">
    <div class="col-md-auto helper">
      <div class="profile-pic mt-5">
        <img
          class="img-thumbnail"
          src="/static/img/blank-user.png"
          alt="profile picture"
          width="300"
          height="300"
        />
        <h2>Thomas</h2>
        <h4>@tcgilbert</h4>
        <br />
        <h6>Bio</h6>
        <p>Lorem ipsum dolor sit amet consectetur</p>
        <p>Lorem ipsum dolor sit amet consectetur</p>
        <p>Lorem ipsum dolor sit amet consectetur</p>
        <p>Lorem ipsum dolor sit amet consectetur</p>
      </div>
    </div>

    <!-- feed -->
    <div class="col helper">
      <div class="profile-nav">
        <nav class="nav nav-pills flex-column flex-sm-row">
          <a class="flex-sm-fill text-sm-center nav-link" href="#">Books</a>
          <a class="flex-sm-fill text-sm-center nav-link" href="#">Authors</a>
          <a class="flex-sm-fill text-sm-center nav-link" href="#">Quotes</a>
        </nav>
      </div>
      <div class="mt-3">
        <% posts.forEach((post) =>{ %>
        <div class="well">
          <h2><%= post.dataValues.title %></h2>
          <p>By: <%= post.dataValues.author %></p>
          <a href="#">More Details</a>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>

<div>
  <a href="/profile/find-books">Create new post</a>
</div>

<% if (book.create) { %>
<script src="/static/js/rating.js"></script>
<% } %>
