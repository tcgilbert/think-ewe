<% if (book.create && !edit) { %>
<!-- Create Entry Modal -->
<div
  class="modal"
  id="staticBackdrop"
  data-show="true"
  data-backdrop="static"
  data-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Create New Entry</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-auto">
              <img src="<%= book.imgUrl %>" alt="Book Cover" />
            </div>
            <div class="col rating">
              <div>
                <h3><%= book.title %></h3>
                <p>By: <%= book.authors %></p>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col mt-3">
              <h5 style="display: inline" class="mt-2">Your Rating:</h5>
              <span class="rating-displayed" id="rating-displayed"></span>
              <div class="stars">
                <img
                  id="star-one"
                  class="star"
                  src="/static/img/star-empty.svg"
                  alt="star outline"
                />
                <img
                  id="star-two"
                  class="star"
                  src="/static/img/star-empty.svg"
                  alt="star outline"
                />
                <img
                  id="star-three"
                  class="star"
                  src="/static/img/star-empty.svg"
                  alt="star outline"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col mt-3">
              <h5 style="display: inline">Your Thoughts:</h5>
              <span class="rating-displayed"> (optional)</span>
              <textarea
                id="blurb"
                name="blurb"
                form="book-post-form"
              ></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <form id="book-post-form" action="/profile" method="POST">
          <input type="hidden" name="title" value="<%= book.title  %>" />
          <input type="hidden" name="author" value="<%= book.authors  %>" />
          <input type="hidden" name="cover" value="<%= book.imgUrl %>" />
          <input id="rating" type="hidden" name="rating" value="" />
          <input type="hidden" name="userId" value="<%= user.id %>" />
          <button type="submit" class="btn btn-primary">Create</button>
        </form>
        <a href="/profile">Cancel</a>
      </div>
    </div>
  </div>
</div>
<% } %>

