<!-- Bio -->
<div class="container-fluid">
  <div class="row">
    <div class="col-md-auto helper">
      <div class="profile-pic mt-5">
        <img
          id="profile-pic"
          src="/static/img/male1.png"
          alt="profile picture"
          width="300"
          height="300"
        />
        <h2><%= user.fullname %> </h2>
        <h4><%= user.username %> </h4>
        <br />
        <h6 style="display: inline;">Bio</h6>
        <p id="bio"><%= user.bio %> </p>
        <a href="/profile/edit">Edit Profile</a>
      </div>
    </div>

    <!-- feed -->
    <div class="col helper">
      <div class="profile-nav">
        <nav class="nav nav-pills flex-column flex-sm-row">
          <a class="flex-sm-fill text-sm-center nav-link" href="#">Books</a>
          <a class="flex-sm-fill text-sm-center nav-link" href="#">Quotes</a>
        </nav>
      </div>
      <div class="mt-3">
        <% posts.forEach((post) =>{ %>
        <div class="book-post">
          <div class="container">
            <div class="row">
              <div class="col-auto">
                <img class="post-img" src="<%= post.dataValues.cover %>" alt="book Cover" />
              </div>
              <div class="col-auto">
                <h2><%= post.dataValues.title %></h2>
                <p class="post-author">By: <%= post.dataValues.author %></p>
                <div>
                  <% if (post.dataValues.rating === 1) { %>  
                    <img
                      id="star-one"
                      class="star"
                      src="/static/img/star.svg"
                      alt="star outline"
                    />
                  <% } %>
                  <% if (post.dataValues.rating === 2) { %>  
                    <img
                      id="star-one"
                      class="star"
                      src="/static/img/star.svg"
                      alt="star outline"
                    />
                    <img
                      id="star-one"
                      class="star"
                      src="/static/img/star.svg"
                      alt="star outline"
                    />
                  <% } %>
                  <% if (post.dataValues.rating === 3) { %>  
                    <img
                      id="star-one"
                      class="star"
                      src="/static/img/star.svg"
                      alt="star outline"
                    />
                    <img
                      id="star-one"
                      class="star"
                      src="/static/img/star.svg"
                      alt="star outline"
                    />
                    <img
                      id="star-one"
                      class="star"
                      src="/static/img/star.svg"
                      alt="star outline"
                    />
                    <% } %>

                </div>
              </div>
              <div class="col">
                <p><strong><%= user.username %></strong> - <%= post.dataValues.blurb %>  </p>
              </div>
              <a href="#">More Details</a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>

<div>
  <a href="/profile/find-books">Create new post</a>
</div>

<% if (book.create) { %>
<script src="/static/js/rating.js"></script>
<% } %>


